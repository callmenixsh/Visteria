{
  "buildCommand": "npm run build",
  "outputDirectory": "dist",
  "framework": "vite",
  "rewrites": [
    { "source": "/api/(.*)", "destination": "/api/$1" },
    { "source": "/((?!api|assets|favicon\\.png|robots\\.txt|sitemap\\.xml|manifest\\.json|service-worker\\.js|.*\\.[a-zA-Z0-9]+$).*)", "destination": "/" }
  ]
}
